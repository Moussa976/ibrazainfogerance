  </main>

  {% include 'partials/_footer.html.twig' %}

  {# Dans le

  <body>, à la fin ou près du footer #}
    <div id="flash-messages" class="fixed bottom-4 right-4 space-y-2 z-50">
      {% for label, messages in app.flashes %}
      {% for message in messages %}
      <div
        class="flash-message px-4 py-3 rounded-lg shadow-lg text-white
																		                                {{ label == 'success' ? 'bg-green-600' :
																		                                (label == 'danger' ? 'bg-red-600' :
																		                                (label == 'warning' ? 'bg-yellow-500 text-black' : 'bg-blue-600')) }}">
        {{ message|raw }}
      </div>
      {% endfor %}
      {% endfor %}
    </div>

    <script>
      // Fade out flash messages after 4 seconds
      setTimeout(() => {
        document.querySelectorAll('.flash-message').forEach(el => {
          el.classList.add('opacity-0', 'transition-opacity', 'duration-500');
          setTimeout(() => el.remove(), 500);
        });
      }, 6000);
    </script>

    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
