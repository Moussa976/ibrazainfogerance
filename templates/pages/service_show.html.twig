{% extends 'base.html.twig' %}

{% block title %}
	{{ service.title }}
	- Ibraza Infogérance
{% endblock %}

{% block body %}
	<section class="py-20 bg-white">
		<div class="container mx-auto px-4 max-w-3xl">
			<div class="mb-8 text-center">
				<i class="{{ service.icon }} text-5xl text-primary mb-4"></i>
				<h1 class="text-3xl font-bold text-primary">{{ service.title }}</h1>
			</div>
			{% if service.image %}
				<img src="{{ asset('uploads/services/') ~ service.image }}" alt="{{ service.title }}" class="rounded-lg mb-8 w-full max-h-96 object-cover">
			{% endif %}
			<h3 class="font-bold mb-1 text-primary/90 text-center">{{ service.shortDescription }}</h3>
			<p class="text-gray-700 text-lg leading-relaxed whitespace-pre-line">
				{{ service.longDescription }}</p>

			<!-- CTA -->
			<div class="mt-12">{% include "partials/_cta.html.twig" %}</div>

			<div class="text-center mt-12">
				<a href="{{ path('app_services') }}" class="inline-block text-primary hover:underline">
					← Retour à la liste des services
				</a>
			</div>
		</div>
	</section>
{% endblock %}
